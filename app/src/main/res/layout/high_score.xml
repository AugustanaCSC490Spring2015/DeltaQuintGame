<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3e8dff">

    <GridLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:rowCount="8"
        android:columnCount="2"
        android:id="@+id/uiGridLayout"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:src="@drawable/high_score_pic"
            android:padding="10dp"
            android:layout_gravity="center|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/uiHighOne"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:editable="true"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/uiHighTwo"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:editable="true"
            android:text="0"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/uiHighThree"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:editable="true"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/uiHighFour"
            android:layout_row="5"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/uiHighFive"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:textColor="#ffffffff" />

    </GridLayout>
</LinearLayout>

