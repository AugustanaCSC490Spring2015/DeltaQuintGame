<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:rowCount="8"
    android:id="@+id/Grid_Layout"
    tools:context=".MainActivity"
    android:background="@drawable/title_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/instructions"
        android:id="@+id/textViewInstructions"
        android:layout_row="2"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_columnSpan="6"
        android:gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play game in Hard Mode?"
            android:id="@+id/hardCheckBox"
            android:layout_row="7"
            android:layout_column="0"
            android:gravity="center_vertical|left"
            android:layout_gravity="center_horizontal|bottom|left"
            android:padding="20dp"
            android:paddingBottom="20dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survival"
            android:id="@+id/switch1"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingBottom="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="@string/start_game_button"
            android:id="@+id/buttonStartGame"
            android:layout_column="2"
            android:layout_row="7"
            android:onClick="mainGameView"
            android:layout_gravity="bottom|right"
            android:paddingBottom="20dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <!--
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/difficultySwitch"
            android:layout_row="7"
            android:layout_column="1"
            android:textOff="Easy"
            android:textOn="Hard"/>
            -->


</GridLayout>